#!/usr/bin/env ζ₂
chokidar ← require('chokidar','1.0.5')

pad ← λ(v,s){↩ v+s.slice(v.length)}

dir ← process.argv[2]

chokidar.watch(dir,{persistent:true, ignoreInitial:true}).on('all', λ(ev,fl){if ({add:1,change:1,unlink:1}[ev] && !fl.match(/\/\.history\//)) {
	now ← moment().toISOString(); short_ ← fl.slice(dir.length)
	print(pad(ev,' '.repeat(6)),now,'.'+short_)
	fs(dir+'/.history/'+now+' '+(ev==='unlink'?'-':'+')+' '+short_.replace(/\//g,'::')).$ = ev==='unlink'? '' : fs(fl).$
}})
