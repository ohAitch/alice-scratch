#!/usr/bin/env ζ
arg ← {ι: process.argv[2]}

diy_stdin ← λ(f){ process.stdin.setRawMode(true); process.stdin.resume().setEncoding("utf8").on("data",λ(key){ f(key) === -1 && process.stdin.pause() }) }

gen ← λ(ι){name←;
	t ← multiline`
		// ==UserScript==
		// @name        NAME
		REST
		// @require     FILE
		// @grant       none
		// ==/UserScript==
		`
		.replace('NAME',name=require('path').basename(ι,'.js'))
		.replace('REST',φ(ι).text.re`^(?:// (?:@r|@m).*\n)+`[0].trim())
		.replace('FILE',φ(ι).url)
	p(t); sfx`ack`; osaᵥ`chrome: open location ${'chrome-extension://dhdgffkkebhmkfjojejmpbldmpobfkfo/options.html'}; activate`

	// user_js ← '/tmp/userscript_'+random_id(10)+'.user.js'
	// φ(user_js).set(t)
	// t ← ()=> osaᵥ`chrome: open location ${φ(user_js).url}`
	// ↩ [name, t]
	}
	
if (arg.ι) gen(arg.ι)//[1]()
