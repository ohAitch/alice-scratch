	get ← Tfun(ι)? ff(ι,_id) : T.Promise(ι)? => ι.ι : ‽
	@ .host= { ,configurable:✓ ,get ,set(ι){ @‘[_id] .host= { ,value:ι ,writable:✓ } } } }
